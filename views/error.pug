html
  head
    meta(charset="UTF-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title!='CS:GO Profiler - Error'
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
    link(rel='stylesheet', type="text/css", href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css')
    link(rel='stylesheet', type="text/css", href='your_assets_directory/styles.css')
    link(href="https://fonts.googleapis.com/css?family=Patua+One|Roboto+Mono|Roboto+Slab" rel="stylesheet")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.8.1/css/perfect-scrollbar.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.8.1/js/perfect-scrollbar.min.js')
    link(rel='shortcut icon', type='image/png', href='https://saliesbox.com/favicon.png')
  body
    header
      div
        a(href= prefix style='color:#fff;text-decoration:none;')
          section.logo
            img(src='your_assets_directory/logo.png')
            span!='CS:GO Profiler'
        section.nav
          a(href= prefix style='color:#fff;text-decoration:none;')
            div.menuitem!='Home'
          a(href='https://github.com/Salies/csgo-profiler' target='_blank' style='color:#fff;text-decoration:none;')
            div.menuitem!='Source'
          a(href='https://github.com/Salies' target='_blank' style='color:#fff;text-decoration:none;')
            div.menuitem!='Author'
    .wrap(ng-app='')
      section.search
        form(onsubmit='init(document.querySelector(".submitter").value)')
          input(type='text', placeholder='SteamID64/Custom URL/Full Profile URL' class='submitter' ng-controller="LocationController")
        script.
          function init(ival){
            if(ival.startsWith("http://steamcommunity.com/profiles/")===true || ival.startsWith("https://steamcommunity.com/profiles/")===true){
              let fval = (ival.split("profiles/").pop()).replace('/','');
              window.location.replace(`#{prefix}/${fval}`);
            }
            else if(ival.startsWith("http://steamcommunity.com/id/")===true || ival.startsWith("https://steamcommunity.com/id/")===true){
              let fval = (ival.split("id/").pop()).replace('/','');
              window.location.replace(`#{prefix}/${fval}`);
            }
            else if(ival.startsWith("http://")===true || ival.startsWith("https://")===true){
              window.location.replace('#{prefix}')
            }
            else if(ival.includes('/')===true){
              let fval = ival.replace('/','');
              window.location.replace(`#{prefix}/${fval}`);
            }
            else{
              window.location.replace(`#{prefix}/${ival}`);
            }
          }
      section.profile(style='color: #C93E3E;')!="Error: " + message
      footer(style='position: absolute;bottom: 0;')!=made
      script(async='', defer='', src='https://buttons.github.io/buttons.js')
