html
  head
    meta(charset="UTF-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title!='CS:GO Profiler - ' + name
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
    link(rel='stylesheet', type="text/css", href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css')
    link(rel='stylesheet', type="text/css", href='assets/styles2.css')
    link(href="https://fonts.googleapis.com/css?family=Patua+One|Roboto+Mono|Roboto+Slab" rel="stylesheet")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.8.1/css/perfect-scrollbar.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.8.1/js/perfect-scrollbar.min.js')
    link(rel='shortcut icon', type='image/png', href='https://saliesbox.com/favicon.png')
  body
    header
      div
        a(href='/' style='color:#fff;text-decoration:none;')
          section.logo
            img(src='assets/logo.png')
            span!='CS:GO Profiler'
        section.nav
          a(href='#' target='_blank' style='color:#fff;text-decoration:none;')
            div.menuitem!='Home'
          a(href='https://github.com/Salies/csgo-profiler' target='_blank' style='color:#fff;text-decoration:none;')
            div.menuitem!='Source'
          a(href='https://github.com/Salies' target='_blank' style='color:#fff;text-decoration:none;')
            div.menuitem!='Author'
    .wrap(ng-app='')
      section.search
        form(onsubmit='init(document.querySelector(".submitter").value)')
          input(type='text', placeholder='SteamID64/Custom URL/Full Profile URL' class='submitter' ng-controller="LocationController")
        script.
          function init(ival){
            if(ival.startsWith("http://steamcommunity.com/profiles/")===true || ival.startsWith("https://steamcommunity.com/profiles/")===true){
              let fval = (ival.split("profiles/").pop()).replace('/','');
              window.location.replace(`/${fval}`);
            }
            else if(ival.startsWith("http://steamcommunity.com/id/")===true || ival.startsWith("https://steamcommunity.com/id/")===true){
              let fval = (ival.split("id/").pop()).replace('/','');
              window.location.replace(`/${fval}`);
            }
            else if(ival.startsWith("http://")===true || ival.startsWith("https://")===true){
              window.location.replace('/')
            }
            else if(ival.includes('/')===true){
              let fval = ival.replace('/','');
              window.location.replace(`/${fval}`);
            }
            else{
              window.location.replace(`/${ival}`);
            }
          }
      section.profile
        div(style='display:flex;align-items: center;')
          img.avatar(src=avatar)
          .info
            span.name!=name
            br
            .realname!=realname
            br
            .country
              img.flag(src=`assets/flags/${countrycode.toLowerCase()}.svg`)
              div!=country
        div(style='text-align:right;')
          .status!=status
          br
          span.steamlink!=steamlink
      section.stats.mobile
        div(style='font-size: 16px;')
          span.kd!=kd
          br
          | K.D. Ratio
        section.group
          .item.margin
            img(src='assets/icons/kills.png')
            .number.kills!=kills
            .att kills
          .item
            img(src='assets/icons/death.png')
            .number.deaths!=deaths
            br
            .att deaths
        section.group
          .item.margin
            img(src='assets/icons/time.png')
            .number.time!=time
            .att(style='font-size: 9.8px;') hours played
          .item
            img(src='assets/icons/mvps.png')
            .number.mvp!=mvps
            .att MVPs
        section.group
          .item.margin
            img(src='assets/icons/planted.png')
            .number.planted!=planted
            .att planted bombs
          .item
            img(src='assets/icons/defused.png')
            .number.defused!=defused
            .att defused bombs
        section.group
          .item.margin
            img(src='assets/icons/hs.png')
            .number.hs!=headshots
            .att headshots
          .item
            img(src='assets/icons/won.png')
            .number.matches!=pm
            .att of matches won
      .mob_stats
        section.mob_kd
          span.mob_kd_c!=kd
          br
          |       K.D. Ratio
        br
        .mob_group
          .mob_item
            img(src='assets/icons/kills.png', style='float:left')
            div(style='float:left')!=kills
            br
            span(style='float:left') kills
          .mob_item
            img(src='assets/icons/death.png', style='float:left')
            div(style='float:left')!=deaths
            br
            span(style='float:left') deaths
        .mob_group
          .mob_item
            img(src='assets/icons/time.png', style='float:left')
            div(style='float:left;min-width: 74px;')!=time
            br
            span(style='float:left') hours played
          .mob_item
            img(src='assets/icons/mvps.png', style='float:left')
            div(style='float:left')!=mvps
            br
            span(style='float:left') MVPs
        .mob_group
          .mob_item
            img(src='assets/icons/planted.png', style='float:left')
            div(style='float:left;min-width: 85px;')!=planted
            br
            span(style='float:left') planted bombs
          .mob_item
            img(src='assets/icons/defused.png', style='float:left')
            div(style='float:left;min-width: 87px;')!=defused
            br
            span(style='float:left') defused bombs
        .mob_group
          .mob_item
            img(src='assets/icons/hs.png', style='float:left')
            div(style='float:left;min-width: 59px;')!=headshots
            br
            span(style='float:left') headshots
          .mob_item
            img(src='assets/icons/won.png', style='float:left')
            div(style='float:left;min-width: 91px;')!=pm
            br
            span(style='float:left') of matches won
      section.extra
        .guns
          .m Most Played Guns
          br
          div.list.gunny!=guns
        .maps
          .m Most Played Maps
          br
          div.list.mappy!=maps
        .bans
          .m Ban Records
          br
          div!=bans
        script.
          const gunny = document.querySelector('.mappy');
          Ps.initialize(gunny, {
            swipePropagation:false
          });
          const mappy = document.querySelector('.gunny');
          Ps.initialize(mappy, {
            swipePropagation:false
          });
          const wrap = document.querySelector('.wrap');
          Ps.initialize(wrap, {
            swipePropagation:true
          });
      footer!=(made)
      script(async='', defer='', src='https://buttons.github.io/buttons.js')